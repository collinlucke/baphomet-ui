import { fileURLToPath } from 'url';
import { dirname } from 'path';

const phantomArtistResolver = {
  resolve: {
    alias: {
      '@collinlucke/phantomartist':
        import.meta.env.NODE_ENV !== 'dev'
          ? '@collinlucke/phantomartist'
          : dirname(fileURLToPath(import.meta.url)) + '../phantomartist'
    }
  }
};

export default phantomArtistResolver;
